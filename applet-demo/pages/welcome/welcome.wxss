page{
  height: 100%;
  background-color: #b3d4db;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
} 

.user-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 50%;
  margin-top: 120rpx;
}

.user-name{
  margin-top: 100rpx;
  font-size: 42rpx;
  font-weight: bold;
}

.moto-container{
  margin-top: 200rpx;
  border: 1px solid #405f80;
  width: 250rpx;
  height: 80rpx;
  border-radius: 5px;
  text-align: center;
}

.moto{
  font-size: 32rpx;
  font-weight: bold;
  line-height: 80rpx;
}
